    - C:\Users\Lucas Mariano\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\Lucas Mariano\source\repos\SGM.BFF:/src:rw
  zookeeper:
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181

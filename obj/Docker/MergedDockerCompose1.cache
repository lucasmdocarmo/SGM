networks:
  broker-kafka:
    driver: bridge
  dockersql-network:
    driver: bridge
services:
  db:
    container_name: dockersql.database
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: SGM123456
    image: mcr.microsoft.com/mssql/server:2019-latest
    networks:
      dockersql-network: {}
    ports:
    - published: 5434
      target: 1433
  kafdrop:
    depends_on:
      kafka:
        condition: service_started
    environment:
      KAFKA_BROKERCONNECT: kafka:29092
    image: obsidiandynamics/kafdrop:latest
    networks:
      broker-kafka: {}
    ports:
    - published: 19000
      target: 9000
  kafka:
    depends_on:
      zookeeper:
        condition: service_started
    environment:
      KAFKA_ADVERTISED_HOST_NAME: 127.0.0.1
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://localhost:9092
      KAFKA_BROKER_ID: 1
      KAFKA_CREATE_TOPICS: cidadao_topic:1:1
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
    image: confluentinc/cp-kafka:latest
    networks:
      broker-kafka: {}
    ports:
    - published: 9092
      target: 9092
  sgm.cidadao.api:
    build:
      context: C:\Users\Lucas Mariano\source\repos\SGM.BFF
      dockerfile: SGM.Cidadao.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: SGM.Cidadao.API
      target: base
    container_name: SGM.Cidadao.API
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: sgmcidadaoapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/SGM.Cidadao.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      dockersql-network: {}
    tty: true
    volumes:
    - C:\Users\Lucas Mariano\source\repos\SGM.BFF\SGM.Cidadao.API:/app:rw
    - C:\Users\Lucas Mariano\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Lucas Mariano\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Lucas Mariano\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\Lucas Mariano\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\Lucas Mariano\source\repos\SGM.BFF:/src:rw
  sgm.consumer.api:
    build:
      context: C:\Users\Lucas Mariano\source\repos\SGM.BFF

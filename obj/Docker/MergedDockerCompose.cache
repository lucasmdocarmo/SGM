networks:
  broker-kafka:
    driver: bridge
services:
  kafdrop:
    depends_on:
      kafka:
        condition: service_started
    environment:
      KAFKA_BROKERCONNECT: kafka:29092
    image: obsidiandynamics/kafdrop:latest
    networks:
      broker-kafka: {}
    ports:
    - published: 19000
      target: 9000
  kafka:
    depends_on:
      zookeeper:
        condition: service_started
    environment:
      KAFKA_ADVERTISED_HOST_NAME: 127.0.0.1
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_BROKER_ID: 1
      KAFKA_CREATE_TOPICS: cidadao_topic:1:1
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
    image: confluentinc/cp-kafka:latest
    networks:
      broker-kafka: {}
    ports:
    - published: 9092
      target: 9092
  sgm.consumer.api:
    build:
      context: C:\Users\Lucas Mariano\source\repos\SGM.BFF
      dockerfile: SGM.Events.Consumer/Dockerfile
    image: sgmeventsconsumer
  sgm.events.api:
    build:
      context: C:\Users\Lucas Mariano\source\repos\SGM.BFF
      dockerfile: SGM.Events.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: sgmeventsapi
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\Lucas Mariano\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Lucas Mariano\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  zookeeper:
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    image: confluentinc/cp-zookeeper:latest
    networks:
      broker-kafka: {}
version: '3.4'